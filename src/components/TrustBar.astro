---
export interface Badge { 
  icon: string; 
  title: string; 
  detail: string; 
}

const { items = [] } = Astro.props as { items: Badge[] };
---

<section class="trust-bar">
  <h4>YOUR EXCLUSIVE RESERVATION GUARANTEES</h4>
  <div class="trust-logos">
    {items.map((badge, index) => (
      <div class="functional-badge">
        <span class="badge-icon">{badge.icon}</span>
        <div class="badge-text">{badge.title}</div>
        <div class="badge-details">{badge.detail}</div>
      </div>
    ))}
  </div>
</section>

<style>
  .trust-bar {
    background-color: var(--color-off-white);
    border-top: 1px solid var(--color-gray-light);
    border-bottom: 1px solid var(--color-gray-light);
    padding: 60px 0;
    text-align: center;
  }
  
  .trust-bar h4 {
    font-family: var(--font-sans);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 40px;
    color: #777;
    font-weight: 400;
  }
  
  .trust-logos {
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .functional-badge {
    text-align: center;
    max-width: 200px;
    color: var(--color-black);
    padding: 20px 15px;
    border-radius: var(--border-radius);
    transition: var(--transition-fast);
  }
  
  .functional-badge:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }
  
  .badge-icon {
    font-size: 2.2rem;
    color: var(--color-accent);
    margin-bottom: 15px;
    display: block;
    transition: var(--transition-fast);
  }
  
  .functional-badge:hover .badge-icon {
    transform: scale(1.1);
  }
  
  .badge-text {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.4;
    margin-bottom: 8px;
    font-family: var(--font-sans);
  }
  
  .badge-details {
    font-size: 0.8rem;
    color: #777;
    line-height: 1.4;
    font-weight: 300;
  }
  
  @media (max-width: 768px) {
    .trust-bar {
      padding: 40px 0;
    }
    
    .trust-logos {
      gap: 20px;
    }
    
    .functional-badge {
      max-width: 160px;
      padding: 15px 10px;
    }
    
    .badge-icon {
      font-size: 1.8rem;
    }
  }
</style>


---
export interface Badge { 
  icon: string; 
  title: string; 
  detail: string; 
}

const { items = [], heading = 'YOUR EXCLUSIVE RESERVATION GUARANTEES' } = Astro.props as { items: Badge[]; heading?: string };
---

<section class="trust-bar">
  <h4>{heading}</h4>
  <div class="trust-logos">
    {items.map((badge, index) => (
      <div class="functional-badge">
        <span class="badge-icon" aria-hidden="true">
          {badge.icon.includes('fa-') || badge.icon.startsWith('fas ') || badge.icon.startsWith('far ') || badge.icon.startsWith('fab ')
            ? (<i class={badge.icon}></i>)
            : badge.icon}
        </span>
        <div class="badge-text">{badge.title}</div>
        <div class="badge-details">{badge.detail}</div>
      </div>
    ))}
  </div>
</section>

<style>
  .trust-bar {
    background-color: var(--color-off-white);
    border-top: 1px solid var(--color-gray-light);
    border-bottom: 1px solid var(--color-gray-light);
    padding: 22px 0; /* tightened from 28px */
    text-align: center;
  }
  
  .trust-bar h4 {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px; /* tightened */
    color: #777;
    font-weight: 400;
  }
  
  .trust-logos {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: nowrap;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .functional-badge {
    text-align: center;
    flex: 1 1 0;
    min-width: 0;
    max-width: 240px;
    color: var(--color-black);
    padding: 16px 8px;
    border-radius: var(--border-radius);
    transition: var(--transition-fast);
  }
  
  .functional-badge:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }
  
  .badge-icon {
    font-size: 2.2rem;
    color: var(--color-accent);
    margin-bottom: 12px;
    display: block;
    transition: var(--transition-fast);
    line-height: 1;
  }
  
  .functional-badge:hover .badge-icon {
    transform: scale(1.1);
  }
  
  .badge-text {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.4;
    margin-bottom: 8px;
    font-family: var(--font-sans);
  }
  
  .badge-details {
    font-size: 0.8rem;
    color: #777;
    line-height: 1.4;
    font-weight: 300;
  }
  
  @media (max-width: 1024px) {
    .trust-logos { flex-wrap: wrap; gap: 12px; }
    .functional-badge { flex: 0 0 calc(33.33% - 12px); max-width: 200px; }
  }
  
  @media (max-width: 768px) {
    .trust-bar { padding: 16px 0; }
    .trust-bar h4 { margin-bottom: 16px; }
    .trust-logos { gap: 10px; }
    .functional-badge { flex: 0 0 calc(50% - 10px); max-width: 150px; padding: 6px 6px; }
    .badge-icon { font-size: 1.5rem; margin-bottom: 8px; }
  }
</style>


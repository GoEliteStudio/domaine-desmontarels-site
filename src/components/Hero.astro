---
export interface Props { 
  title: string; 
  subtitle?: string; 
  images: string[]; 
  alt: string; 
  ctaHref?: string; 
  ctaText?: string; 
}

const props = Astro.props as Props;
const { title, subtitle, images = [], alt, ctaHref = '#overview', ctaText = 'Discover' } = props;
---

<section class="hero">
  <div class="hero-slideshow">
    {images.map((image, index) => (
      <div 
        class={`hero-slide ${index === 0 ? 'active' : ''}`}
        style={`background-image: url('${image}')`}
        role="img"
        aria-label={index === 0 ? alt : `${alt} - view ${index + 1}`}
      ></div>
    ))}
  </div>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    <a href={ctaHref} class="btn btn-light">{ctaText}</a>
  </div>
  <a href={ctaHref} class="hero-scroll">
    Scroll
    <span class="hero-scroll-line"></span>
  </a>
</section>

<style>
  .hero {
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 100px; /* Reserve space for scroll indicator */
    overflow: hidden;
  }
  
  .hero-slideshow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 1.5s ease;
  }
  
  .hero-slide.active {
    opacity: 1;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 35% 45%, rgba(0,0,0,.38), transparent 62%),
      linear-gradient(to bottom, rgba(0,0,0,0.25) 0%, rgba(0,0,0,0.48) 100%);
    z-index: 2;
    pointer-events: none;
    mix-blend-mode: normal;
  }
  
  .hero-content {
    text-align: center;
    color: var(--color-white);
    max-width: 860px;
    padding: 0 28px;
    z-index: 3;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .hero-title {
    font-size: clamp(2.4rem, 5.2vw, 4.4rem);
    font-weight: 400;
    margin: 0 0 26px;
    letter-spacing: 1.5px;
    line-height: 1.05;
    text-shadow: 0 3px 26px rgba(0,0,0,.5), 0 0 2px rgba(0,0,0,.35);
  }
  
  .hero-subtitle {
    font-size: 1.15rem;
    font-weight: 300;
    margin: 0 0 44px;
    max-width: 620px;
    letter-spacing: .8px;
    line-height: 1.5;
    text-shadow: 0 2px 14px rgba(0,0,0,.5), 0 0 1px rgba(0,0,0,.4);
  }
  
  .btn {
    display: inline-block;
    padding: 18px 38px;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-size: 0.83rem;
    font-weight: 500;
    transition: all 0.35s cubic-bezier(.25,.46,.45,.94);
    text-decoration: none;
    backdrop-filter: blur(4px);
    position: relative;
    overflow: hidden;
  }
  .btn-light::before {content:'';position:absolute;inset:0;background:linear-gradient(135deg,rgba(255,255,255,.18),transparent 60%);opacity:0;transition:opacity .4s;}
  
  .btn-light {
    background: transparent;
    color: #fff;
    border: 1px solid #fff;
  }
  
  .btn-light:hover {
    background: rgba(255, 255, 255, 0.14);
    transform: translateY(-3px);
  }
  .btn-light:hover::before {opacity:1;}
  
  .hero-scroll {
    position: absolute;
    bottom: 44px;
    left: 50%;
    transform: translateX(-50%);
    color: var(--color-white);
    font-size: 0.72rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0.75;
    z-index: 4;
    text-decoration: none;
    transition: opacity 0.3s ease;
    pointer-events: auto;
    background: transparent;
  }
  
  .hero-scroll:hover {
    opacity: 1;
  }
  
  .hero-scroll-line {
    display: block;
    width: 1px;
    height: 40px;
    background-color: var(--color-white);
    margin-top: 10px;
  }
  
  @media (max-width: 768px) {
    .hero {height: 92vh; padding-bottom: 0;}
    .hero-title {font-size: 2.3rem;letter-spacing:1px;margin-bottom:20px;}
    .hero-subtitle {font-size:.95rem;margin-bottom:32px;}
    .btn {padding:16px 30px;font-size:.72rem;letter-spacing:1.8px;}
  .hero-overlay {background:linear-gradient(to bottom,rgba(0,0,0,.45) 0%,rgba(0,0,0,.6) 100%);}
    .hero-scroll {display:none;}
    .hero-content {padding:0 18px;}
  }
  @media (max-width: 480px) {
    .hero-title {font-size:2rem;line-height:1.08;}
    .hero-subtitle {font-size:.9rem;letter-spacing:.5px;}
  }
</style>

<script>
  // Hero slideshow functionality
  if (typeof window !== 'undefined') {
    let currentSlide = 0;
  const slides = document.querySelectorAll('.hero-slide');
    
    function nextSlide() {
      if (slides.length > 1) {
        slides[currentSlide].classList.remove('active');
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].classList.add('active');
      }
    }
    
    // Change slide every 5 seconds if multiple slides
    if (slides.length > 1) {
      setInterval(nextSlide, 5000);
    }
  }
</script>

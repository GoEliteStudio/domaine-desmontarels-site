# Firebase Admin SDK
# Get these from Firebase Console → Project Settings → Service Accounts
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Resend Email API
RESEND_API_KEY=

# Owner Email (default recipient for inquiries)
OWNER_EMAIL=

# Verified sender email (must have SPF/DKIM set up)
FROM_EMAIL=

# Signed action links secret (generate a random 64+ char string)
OWNER_ACTION_SECRET=

# Stripe
# Get from Stripe Dashboard → Developers → API keys
STRIPE_SECRET_KEY=
# Get from Stripe Dashboard → Developers → Webhooks → your endpoint → Signing secret
STRIPE_WEBHOOK_SECRET=

# Site URL (for action links and redirects)
SITE_URL=https://your-site.vercel.app
